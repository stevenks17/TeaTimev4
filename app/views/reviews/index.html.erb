<p id="notice"><%= notice %></p>

<h1>Reviews</h1>

<table>
  <thead>
    <tr>
      <th>Brand</th>
      <th>Tea</th>
      <th>Title</th>
      <th>Rating</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reviews.each do |review| %>
    
      <tr>
        <td><%=  review.tea.brand.title %></td>
        <td><%=  review.tea.flavor %></td>
        <td><%= link_to review.title, review_path(review)%></td>
        <td><%= review.rating %></td>

        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Delete', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Review', new_review_path %>
